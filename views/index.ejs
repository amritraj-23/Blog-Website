<%- include('header') %>

    <h1 class="header">Blog Website</h1>
    <h1><a href="/blog/new" class="btn btn-primary">New Blog</a></h1>
    <ul>
        <%for(let item of lists){%>
        <li>
            <h3 class="title"><%= item.title %> </h3>
            <h3><%=item.username%></h3>
            <p><%=item.blog%></p>
            <a href="/blog/<%=item.id%> " class="btn btn-primary">Show</a>
            <a href="/blog/<%=item.id%>/edit" class="btn btn-primary">Edit</a>

            <form action="/blog/<%=item.id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        </li>
        <%}%>
    </ul>
    
</body>
</html>